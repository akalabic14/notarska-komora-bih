{
    "routes": [
        {
            "path": "/login",
            "method": "post",
            "controller": "login.js"
        },
        {
            "path": "/logout",
            "method": "post",
            "controller": "logout.js"
        },
        {
            "path": "/get-user",
            "method": "post",
            "controller": "get-user.js",
            "requires_auth": "true"
        },
        {
            "path": "/user-actions/:method",
            "method": "post",
            "controller": "user-actions.js",
            "requires_auth": "true"
        },
        {
            "path": "/news-actions/:method",
            "method": "post",
            "controller": "news-actions.js",
            "requires_auth": "true"
        }
    ]
}